{
    "scopeName": "source.rust.bitcoin-script.injection",
    "injectionSelector": "L:source.rust",
    "patterns": [
        {
            "begin": "(script!)\\s*\\{",
            "beginCaptures": {
                "1": {
                    "name": "keyword.control.rust"
                }
            },
            "end": "\\}",
            "contentName": "meta.embedded.block.bitcoin-script",
            "patterns": [
                {
                    "match": "(O)(P)(_)(C)(A)(T)\\b",
                    "captures": {
                        "1": { "name": "keyword.other.opcat.o" },
                        "2": { "name": "keyword.other.opcat.p" },
                        "3": { "name": "keyword.other.opcat.underscore" },
                        "4": { "name": "keyword.other.opcat.c" },
                        "5": { "name": "keyword.other.opcat.a" },
                        "6": { "name": "keyword.other.opcat.t" }
                    }
                },
                {
                    "comment": "Stack Operations",
                    "match": "\\b(OP_DROP|OP_DUP|OP_NIP|OP_OVER|OP_PICK|OP_ROLL|OP_ROT|OP_SWAP|OP_TUCK|OP_2DROP|OP_2DUP|OP_3DUP|OP_2OVER|OP_2ROT|OP_2SWAP|OP_DEPTH|OP_SIZE|OP_TOALTSTACK|OP_FROMALTSTACK|OP_IFDUP)\\b\\s*-?",
                    "name": "entity.name.function.stack.bitcoin-script"
                },
                {
                    "comment": "Flow Control",
                    "match": "\\b(OP_IF|OP_NOTIF|OP_ELSE|OP_ENDIF|OP_VERIFY|OP_RETURN|OP_CODESEPARATOR|OP_NOP)\\b\\s*-?",
                    "name": "entity.name.function.flow.bitcoin-script"
                },
                {
                    "comment": "Arithmetic Operations",
                    "match": "\\b(OP_1ADD|OP_1SUB|OP_NEGATE|OP_ABS|OP_NOT|OP_0NOTEQUAL|OP_ADD|OP_SUB|OP_MUL|OP_DIV|OP_MOD|OP_LSHIFT|OP_RSHIFT|OP_MIN|OP_MAX)\\b\\s*-?",
                    "name": "entity.name.function.arithmetic.bitcoin-script"
                },
                {
                    "comment": "Cryptographic Operations",
                    "match": "\\b(OP_SHA256|OP_SHA1|OP_RIPEMD160|OP_HASH160|OP_HASH256|OP_CHECKSIG|OP_CHECKSIGVERIFY|OP_CHECKMULTISIG|OP_CHECKMULTISIGVERIFY|OP_CHECKSIGADD)\\b\\s*-?",
                    "name": "entity.name.function.crypto.bitcoin-script"
                },
                {
                    "comment": "Comparison Operations",
                    "match": "\\b(OP_EQUAL|OP_EQUALVERIFY|OP_BOOLAND|OP_BOOLOR|OP_NUMEQUAL|OP_NUMEQUALVERIFY|OP_NUMNOTEQUAL|OP_LESSTHAN|OP_GREATERTHAN|OP_LESSTHANOREQUAL|OP_GREATERTHANOREQUAL|OP_WITHIN)\\b\\s*-?",
                    "name": "entity.name.function.comparison.bitcoin-script"
                },
                {
                    "comment": "Constants",
                    "match": "\\b(OP_0|OP_FALSE|OP_1|OP_TRUE|OP_2|OP_3|OP_4|OP_5|OP_6|OP_7|OP_8|OP_9|OP_10|OP_11|OP_12|OP_13|OP_14|OP_15|OP_16)\\b\\s*-?",
                    "name": "entity.name.function.constant.bitcoin-script"
                },
                {
                    "match": "//.*$",
                    "name": "comment.line.double-slash"
                },
                {
                    "match": "\\[\\s*([0-9]+(?:\\s*,\\s*[0-9]+)*)?\\s*\\]",
                    "name": "constant.numeric.array.bitcoin-script"
                },
                {
                    "match": "\\b[0-9]+\\b",
                    "name": "constant.numeric.bitcoin-script"
                },
                {
                    "match": "H\\([0-9]+\\)",
                    "name": "entity.name.function.hash.bitcoin-script"
                }
            ]
        }
    ]
}
